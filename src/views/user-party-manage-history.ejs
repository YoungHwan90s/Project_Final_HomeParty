<body>
    <!-- Header-->
    <header class="bg-white py-3">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-black">
                <h1 class="display-4 fw-bolder">파티 이력</h1>
                <p class="lead fw-normal text-black-50 mb-0">
                    파티는 잘 즐기셨나요? 파티에 리뷰를 달아주세요!
                </p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <div class="mainSection">
        <ul class="partyList partyGrid"></ul>
    </div>
</body>
<script>
    $(document).ready(() => {
        $.ajax({
            type: 'GET',
            url: '/api/party/history',
            data: {},
            headers: {
                authorization: `Bearer ${sessionStorage.getItem('accessToken')}`,
                refreshtoken: `${sessionStorage.getItem('refreshToken')}`,
            },
            success: function (response) {
                console.log(response);
                for (let i = 0; i < response.length; i++) {
                    const {
                        partyId,
                        id,
                        title,
                        currMember,
                        maxMember,
                        status,
                        partyMember,
                        thumbnail,
                        createdAt,
                    } = response[i];
                    let Id = response[i].id;
                    let titles = response[i].title;
                    let curr = response[i].currMember;
                    let max = response[i].maxMember;
                    let statuses = response[i].status;
                    let partyMembers = response[i].partyMember;
                    let thumbnails = response[i].thumbnail;
                    let createDate = new Date(response[i].createdAt);

                    const year = createDate.getFullYear();
                    const month = ('0' + (createDate.getMonth() + 1)).slice(-2);
                    const day = ('0' + createDate.getDate()).slice(-2);

                    const partyItem = `
                    <li class="partyItem">
                        <div class="thumbnailWrapper carousel">
                            <a href="party/${Id}" class="partyLink thumbnailLink">
                                <ul class="thumbnailList carouselList">
                                    <img class="card-img" src="${thumbnails[0].thumbnail}" alt="Party thumbnail" style="margin-bottom:10%">
                                </ul>
                            </a>

                        <a href="party/${Id}" class="partyLink">
                            <dl class="partyInfoList">
                                <div class="partyInfoItem partyTitle">
                                    <dt class="a11yHidden">제목</dt>
                                    <dd>
                                        ${title}
                                    </dd>
                                </div>
                                <div class="partyInfoItem partyHeadcount">
                                    <dt>현재</dt>
                                    <dd class="currentCount">
                                        ${currMember}명
                                    </dd>
                                    <dt>총</dt>
                                    <dd class="totalCount">
                                        ${maxMember}명
                                    </dd>
                                </div>
                                <div class="partyInfoItem partyEtc">
                                    <dt class="a11yHidden">지역</dt>
                                    <dd class="partyPlace">
                                    </dd>
                                    <dt class="a11yHidden">날짜</dt>
                                    <dd class="partyDate">
                                        ${year}-${month}-${day}
                                    </dd>
                                    <button type="button" class="btn btn-danger" onclick="deleteParty(${Id})" style="margin-top : 5%">삭제</button>
                                </div>
                            </dl>
                        </a>
                        
                    </li>
                `;

                    $('.partyList').append(partyItem);
                }
            },
        });
    });

    function deleteParty(partyid) {
        const result = confirm('해당 파티를 삭제하시겠습니까?');
        if (result) {
            $.ajax({
                type: 'DELETE',
                url: `/admin/parties/${partyid}`,
                data: {},
                headers: {
                    authorization: `Bearer ${sessionStorage.getItem('accessToken')}`,
                    refreshtoken: `${sessionStorage.getItem('refreshToken')}`,
                },
                success: function (response) {
                    alert('파티 삭제 되었습니다.');
                    $(`#id{partyid}`).remove();
                    window.location.reload();
                },
            });
        } else {
            alert('삭제 취소되었습니다.');
        }
    }
</script>
